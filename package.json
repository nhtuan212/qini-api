{
    "name": "qini-api",
    "version": "1.0.0",
    "main": "index.ts",
    "author": "Nguyen Hoang Tuan",
    "license": "MIT",
    "include": [
        "./src/*.ts"
    ],
    "scripts": {
        "start": "node dist/index.js",
        "dev": "NODE_ENV=development & nodemon src/index.ts",
        "build": "tsc",
        "prettier": "prettier --write \"**/*.{ts,tsx,json,scss}\"",
        "eslint": "tsc --noEmit && eslint --quiet \"src/**/*.{ts,tsx,json}\"",
        "lint-staged": "lint-staged",
        "serve": "node dist/index.js",
        "prepare": "husky install"
    },
    "lint-staged": {
        "src/**/*.{ts,tsx,json}": [
            "yarn prettier",
            "yarn eslint",
            "git add ."
        ]
    },
    "dependencies": {
        "bcryptjs": "^3.0.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "drizzle-orm": "^0.44.3",
        "express": "^4.18.2",
        "node-cron": "^4.2.1",
        "node-rsa": "^1.1.1",
        "postgres": "^3.4.7"
    },
    "devDependencies": {
        "@types/bcryptjs": "^3.0.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^20.11.14",
        "@types/node-rsa": "^1.1.4",
        "@typescript-eslint/eslint-plugin": "^6.13.2",
        "@typescript-eslint/parser": "^6.13.2",
        "drizzle-kit": "^0.31.4",
        "eslint": "^8.55.0",
        "eslint-plugin-json": "^3.1.0",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.0",
        "nodemon": "^3.1.0",
        "prettier": "3.1.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
}
